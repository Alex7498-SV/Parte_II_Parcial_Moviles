<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:layout_margin="10sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_eqA1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="Equipo 1"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_score1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="0"
                android:textSize="30sp" />

        </LinearLayout>
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="10sp"
                android:id="@+id/tv_eqB1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Equipo 2"
                android:textSize="30sp"
                />

            <TextView
                android:layout_margin="10sp"
                android:id="@+id/tv_score2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="30sp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="10sp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="10sp"
            android:id="@+id/fechatxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha del juego"
            android:textSize="24sp"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/tv_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="20sp"
            android:textColor="#000000"
            />

        <TextView
            android:layout_margin="10sp"
            android:id="@+id/horatxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora del juego"
            android:textSize="24sp"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/tv_hora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora"
            android:textSize="20sp"
            android:textColor="#000000"
            />

        <TextView
            android:layout_margin="30sp"
            android:id="@+id/tv_ganador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ganador"
            android:textSize="30sp"
            android:textColor="#000000"
            />

    </LinearLayout>

</LinearLayout>